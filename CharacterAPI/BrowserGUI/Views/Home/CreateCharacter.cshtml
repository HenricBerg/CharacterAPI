@model CharacterAPI.Models.CharacterModel

@{
    ViewData["Title"] = "CreateCharacter";
}

<h2 class="character-text" id="black">Character Creator</h2>

<h4 class="character-text" id="black">Step into the multiverse</h4>
<hr id="black"/>
<div class="row">
    <div class="col-md-4 col-md-offset-4 element-center">
        <div>
            <label>Greetings traveller.</label>

            <p id="IntroText">
                In order to re-assemble yourself
                <br />
                you will need to answer some personal questions.
                <br />
                Agreed?
            </p>
            <button onclick=CreatorStep() class="btn btn-default btn-input">Agreed...</button>
        </div>
