            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input asp-for="Token" class="form-control text-input invisible text-input invisible" />
                <span asp-validation-for="Token" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="CharacterName" class="form-control text-input invisible" />
                <span asp-validation-for="CharacterName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="PlayerName" class="form-control text-input invisible" />
                <span asp-validation-for="PlayerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Race" class="form-control text-input invisible" />
                <span asp-validation-for="Race" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Class" class="form-control text-input invisible" />
                <span asp-validation-for="Class" class="text-danger"></span>
            </div>
